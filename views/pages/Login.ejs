<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>Lakewood Lightning Fun Meet</title>
    <!-- MDB icon -->
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" />
    <!-- Google Fonts Roboto -->
    <link
            rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
    />
    <!-- MDB -->
    <link rel="stylesheet" href="css/mdb.min.css" />
  </head>
  <body>
    <div class="form_wrapper">
      <div class="form_container">
        <div class="title_container">
          <h2>Lakewood Fun Meet<br>Competitor Login</h2>
        </div>
        <div class="row clearfix">
          <div class="">
            <form id="frmLogin" action="/loginAttempt" method="post" onsubmit="submitScript(e);">
              <!-- <div class="input_field"> <span><img src="/img/email-small.png" class="form_icon"></span>
                <input type="email" name="email" placeholder="Email" required />
              </div>
              <span class="credit"><b>OR</b></span> -->
              <div class="row clearfix">
                <div class="col_half">
                  <div class="input_field"> <span><img src="/img/user-small.png" class="form_icon"></span>
                    <input type="text" name="FirstName"  placeholder="First Name" required/>
                  </div>
                </div>
                <div class="col_half">
                  <div class="input_field"> <span><img src="/img/user-small.png" class="form_icon"></span>
                    <input type="text" name="LastName"  placeholder="Last Name" required />
                  </div>
                </div>
              </div>
              <div class="row clearfix">
                <div class="input_field"> <span><img src="/img/key-small.png" class="form_icon"></span>
                  <input type="password" name="Password" placeholder="Password" required />
                </div>
              </div>
              <div class="row clearfix">
                <div class="input_field"><% if (typeof LoginResult !== 'undefined') {%>
                  <p class="credit"><%=LoginResult%></p>
                  <% } %>
                </div>
              </div>
              <input class="button" type="submit" value="Login" />
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>